<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">


    <bean id="statisticsController" class="uk.ac.ebi.intact.view.webapp.controller.application.StatisticsController" lazy-init="true">
        <aop:scoped-proxy/>
    </bean>
    <bean id="chartController" class="uk.ac.ebi.intact.view.webapp.controller.application.ChartController" lazy-init="true">
        <aop:scoped-proxy/>
    </bean>
    <bean id="pieChartController" class="uk.ac.ebi.intact.view.webapp.controller.application.PieChartController" lazy-init="true">
        <aop:scoped-proxy/>
    </bean>
</beans>
